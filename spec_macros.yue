export macro expect_that = (expr, matcher) ->
  eqs = '='
  while expr\match eqs
    eqs ..= '='
  label = "[#{eqs}[#{expr}]#{eqs}]"
  location = '"#{$FILE}:#{$LINE}"'
  "require('spec')._expect_that #{label}, #{expr}, (#{matcher}), #{location}"

